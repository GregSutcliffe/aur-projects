# Maintainer: Greg Sutcliffe <greg.sutcliffe at gmail dot com>
pkgname=ruby-augeas
pkgver=0.4.1
pkgrel=2
pkgdesc="Provides Ruby bindings for augeas"
arch=('any')
url="http://augeas.net"
license=('LGPL')
depends=('ruby' 'rubygems' 'augeas')
source=(http://rubygems.org/downloads/${pkgname}-${pkgver}.gem)
noextract=(${pkgname}-${pkgver}.gem)
md5sums=('1d61673aa968f4f816d1dbdb0b52782d')

build() {
  cd "${srcdir}"
  export HOME=/tmp
  local _gemdir="$(ruby -rubygems -e'puts Gem.default_dir')"
  gem install --no-user-install --ignore-dependencies -i "${pkgdir}${_gemdir}" ${pkgname}-${pkgver}.gem
}
