[Unit]
Description=Foreman
Wants=basic.target
After=basic.target network.target

[Service]
Type=forking
User=foreman
WorkingDirectory=/usr/share/foreman
PIDFile=/run/foreman/foreman.pid
ExecStart=/usr/share/foreman/script/rails server -d -e production -P /run/foreman/foreman.pid

[Install]
WantedBy=multi-user.target
